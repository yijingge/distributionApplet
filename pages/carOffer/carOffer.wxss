/* pages/carOffer/carOffer.wxss */
page {
  background-color: #f2f3f4;
}
.clearFix{
  zoom:1;
}
.clearFix:after{
  display:block;
  content:"clear";
  height:0;
  clear:both;
  overflow:hidden;
  visibility:hidden;
}
.header {
  background: #ffffff;
  width: 100%;
  font-size: 28rpx;
  padding: 30rpx 10rpx 30rpx 30rpx;
  color: #000;
}
.header_h {
  font-size: 36rpx;
  color: #000;
  position: relative;
  top: 10rpx
}
.priceText{
  padding-left: 30rpx;
  position: relative;
  top: 10rpx
}
.price_red {
  font-size: 36rpx;
  color: #ff4d4d;
}

.addBtn {
  display: inline-block;
  outline: none;
  width: 190rpx;
  height: 64rpx;
  line-height: 64rpx;
  background: #00aaff;
  color: #FFF;
  border: none;
  font-size: 28rpx;
}
button::after {
  border: none;
  outline: none;
}
.delBtn{
  background: none;
  display: inline-block;
}
.page__bd {
  font-size: 26rpx;
}

.arrow_icon {
  width: 50rpx;
  height: 50rpx;
  float: right;
  position: relative;
  left: 20rpx;
}

.listTitle {
  background: #ffffff;
  padding: 20rpx 30rpx 10rpx 30rpx;
}

.listTitleIcon {
  width: 50rpx;
  height: 50rpx;
}
.hideInput{
  display: none;
}
/*footer*/
.primary{
  color: #fff!important;
  background: #00aaff;
}
.footerBtn{
  border: 1rpx solid #00aaff;
  width: 320rpx;
  height: 88rpx;
  line-height: 88rpx;
  color: #00aaff;
  font-size: 36rpx;
}
.input-placeholder{
  color: #999999;
  font-size: 28rpx;
  font-weight: normal;
}
.wux-cell{
  height: 60rpx;
}
.emeptyView{
  margin: 20rpx 0;
}