/* pages/immediateOffer.wxss */

page {
    background-color: #f2f3f4;
}

.immediateOffer_title {
    width: 100%;
    height: 96rpx;
    padding: 0 30rpx;
    border-top: 1px solid #dddee1;
    line-height: 96rpx;
    background: #fff;
}

.immediateOffer_title_left {
    font-size: 32rpx;
    color: #000000;
}

.addOfferButton {
    position: fixed;
    top: 16rpx;
    right: 30rpx;
    width: 190rpx;
    height: 64rpx;
    line-height: 64rpx;
    text-align: center;
    background: #00aaff;
    font-size: 26rpx;
    color: #ffffff;
    border-radius: 16rpx;
}

.button {
    width: 92%;
    height: 88rpx;
    margin: 60rpx auto;
    background: #00aaff;
    border-radius: 16rpx;
    font-size: 36rpx;
    color: #fff;
    text-align: center;
    line-height: 88rpx;
}

.button_grey {
    background: #e9eaec;
    color: #999999;
}

.button_hover {
    background: #26b7ff;
}

.card_remarks {
    width: 100%;
    height: auto;
    background: #fff;
    margin-top: 20rpx;
}

.card_remarks_title {
    width: auto;
    height: 88rpx;
    padding: 0 30rpx;
    font-size: 32rpx;
    color: #000000;
    line-height: 88rpx;
    border-bottom: 1px solid #dddee1;
}

.card_remarks_content {
    width: auto;
    height: auto;
    padding: 30rpx;
    font-size: 28rpx;
    color: #000000;
}

.immediateOffer_checkBox {
    width: 92%;
    height: auto;
    margin: 40rpx auto;
}

.checkbox_text {
    display: inline;
    font-size: 28rpx;
}

.checkbox_text_special {
    display: inline;
    color: #00aaff;
}

.checkbox_text_special_hover {
    color: #26b7ff;
}

.footer {
    width: 100%;
    height: auto;
    margin-bottom: 60rpx;
}
